/dts-v1/;
/ {
	compatible = "opencores,or1ksim";
	#address-cells = <1>;
	#size-cells = <1>;
	interrupt-parent = <&pic>;

	chosen {
		bootargs = "console=uart,mmio,0x90000000,115200";
	};

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x02000000>;
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		cpu@0 {
			compatible = "opencores,or1200-rtlsvn481";
			reg = <0>;
			clock-frequency = <50000000>;
		};
	};

	/*
	 * OR1K PIC is built into CPU and accessed via special purpose
	 * registers.  It is not addressable and, hence, has no 'reg'
	 * property.
	 */
	pic: pic {
		compatible = "opencores,or1k-pic";
		#interrupt-cells = <1>;
		interrupt-controller;
	};

	serial0: serial@90000000 {
		compatible = "opencores,uart16550-rtlsvn105", "ns16550a";
		reg = <0x90000000 0x100>;
		interrupts = <2>;
		clock-frequency = <50000000>;
	};

	serial1: serial@91000000 {
		compatible = "opencores,uart16550-rtlsvn105", "ns16550a";
		reg = <0x91000000 0x100>;
		interrupts = <2>;
		clock-frequency = <50000000>;
	};

        i2c@a0000000 {
              compatible = "opencores,i2c-ocores";
              reg = <0xa0000000 0x8>;
              regstep = <1>;
              interrupts = <14>;
              clock-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <0>;
        };
        i2c@a1000000 {
              compatible = "opencores,i2c-ocores";
              reg = <0xa1000000 0x8>;
              regstep = <1>;
              interrupts = <15>;
              clock-frequency = <50000000>;
		#address-cells = <1>;
		#size-cells = <0>;
        };

        spi@b0000000 {
          compatible = "opencores,spi-simple";
          reg = <0xb0000000 0x4>;
          interrupts = <7>;
		#address-cells = <1>;
		#size-cells = <0>;
        };

        spi@b1000000 {
          compatible = "opencores,spi-simple";
          reg = <0xb1000000 0x4>;
          interrupts = <8>;
		#address-cells = <1>;
		#size-cells = <0>;
        };

        spi@b2000000 {
          compatible = "opencores,spi-simple";
          reg = <0xb2000000 0x4>;
          interrupts = <9>;
		#address-cells = <1>;
		#size-cells = <0>;
        };

        spi@b3000000 {
          compatible = "opencores,spi-simple";
          reg = <0xb3000000 0x4>;
          interrupts = <10>;
		#address-cells = <1>;
		#size-cells = <0>;
        };


};
